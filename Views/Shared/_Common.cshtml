@using StratBazWebComp.Helper

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
    <script crossorigin="anonymous" src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.26.0/babel.min.js"></script>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/Lte/plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/Lte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/Lte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/Lte/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Lte/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <div class="col" style="padding-right: 60px">
                <b>Admin Panel</b>
            </div>
            <div class="col-1">
                <a href="/Login/Logout" class="btn btn-block btn-danger btn-sm">Logout</a>
            </div>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="Home/Details" class="brand-link">
                <img src="~/Content/Lte/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AA Trading</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->

                        <li class="nav-item">
                            <a href="/Home/Details" class="nav-link @Html.IsActive("Home", "Details" )">
                                <i class="nav-icon fas fa-address-card"></i>
                                <p>
                                    User Details
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Home/Coupon_Mgmt" class="nav-link @Html.IsActive("Home", "Coupon_Mgmt" )">
                                <i class="nav-icon fa fa-bolt"></i>
                                <p>
                                    Coupons Management
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        @RenderBody()
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->

        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                StratBaz
            </div>
            <!-- Default to the left -->
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Content/Lte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/Lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="~/Content/Lte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Content/Lte/plugins/jszip/jszip.min.js"></script>
    <script src="~/Content/Lte/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Content/Lte/plugins/moment/moment.min.js"></script>
    <script src="~/Content/Lte/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Content/Lte/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Content/Lte/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/Lte/dist/js/adminlte.min.js"></script>
    <!-- Page specific script -->
    @RenderSection("Scripts", required: false)

</body>
</html>
